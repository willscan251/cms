# ==========================================
# Scanland Visual Content Management System
# Server-Integrated CMS for Professional Website Editing
# ==========================================

# Server Configuration
NODE_ENV=development
CMS_PORT=3001
SERVER_HOST=0.0.0.0

# Authentication
CMS_PASSWORD=Scanland2025!CMS
CMS_SESSION_SECRET=scanland-visual-cms-secure-key-2025
SESSION_TIMEOUT_HOURS=24

# Scanland Branding
ORGANIZATION_NAME=Scanland
SYSTEM_NAME=Scanland Visual Content Management System
PARENT_DOMAIN=scanland.org
VERSION=4.0.0

# Color Scheme
COLOR_BG=#F3E7D1
COLOR_TEXT=#0F3D27
COLOR_PRIMARY=#0F3D27
COLOR_ACCENT=#7BB58C
COLOR_NEUTRAL=#E0E0E0
COLOR_FOOTER=#0B2A1A
FOOTER_HOVER=#145B37

# Visual Editor Settings
EDITOR_TYPE=visual-wysiwyg
VISUAL_EDITING_ENABLED=true
TEXT_FORMATTING_PRESERVATION=true
UNIVERSAL_ELEMENT_EDITING=true
DRAG_DROP_ENABLED=false
LIVE_PREVIEW=true

# File Management
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=html,css,js,json,txt,md,jpg,jpeg,png,gif,svg,pdf,webp
AUTO_BACKUP_ENABLED=true
MAX_BACKUPS_PER_SITE=15
BACKUP_RETENTION_DAYS=30

# Server Features
SERVER_SIDE_CLEANING=true
ZERO_CMS_TRACES_OUTPUT=true
CLEAN_DOWNLOADS=true
AUTO_BACKUP_BEFORE_SAVE=true
DETAILED_LOGGING=true

# Security Settings
CORS_ENABLED=true
RATE_LIMITING=false
REQUEST_SIZE_LIMIT=50mb
SECURE_HEADERS=true

# Development Settings
DEV_AUTO_RELOAD=true
DEV_DETAILED_LOGS=true
DEV_ERROR_STACK_TRACE=true
DEBUG_ENDPOINTS=false

# User Experience
SHOW_SUCCESS_NOTIFICATIONS=true
VISUAL_EDIT_INDICATORS=true
HOVER_OUTLINES=true
KEYBOARD_SHORTCUTS_ENABLED=true
AUTO_SCROLL_TO_CHANGES=true

# Universal Website Integration
UNIVERSAL_CMS_MODE=true
AUTO_DETECT_WEBSITE_TYPE=true
ADAPT_TO_EXISTING_STYLES=true

# Performance Settings
COMPRESSION_ENABLED=false
CACHE_STATIC_ASSETS=false
OPTIMIZE_HTML_OUTPUT=true
MINIFY_CSS_INLINE=false

# Backup Configuration
BACKUP_DIRECTORY=../backups
BACKUP_FILENAME_FORMAT=timestamp
BACKUP_COMPRESSION=false
CLEANUP_OLD_BACKUPS=true

# Error Handling
DETAILED_ERROR_MESSAGES=true
LOG_ALL_REQUESTS=true
FAIL_GRACEFULLY=true
FALLBACK_TO_OFFLINE_MODE=false